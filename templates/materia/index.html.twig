{% extends 'extends/iboxContent.html.twig' %}

{% block tituloPagina %}Gesti√≥n de Materias{% endblock %}

{% block contenidoIbox %}
    <div class="container-fluid">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-md-6">
                <h1 class="h3 text-gray-800">
                    <i class="fas fa-book me-2"></i>Listado de Materias
                </h1>
            </div>
            <div class="col-md-6 text-end">
                <a href="{{ path('app_materia_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Nueva Materia
                </a>
            </div>
        </div>

        <!-- Card para la tabla -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Materias Registradas</h6>
            </div>
            <div class="card-body">
                {% if materias|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Nombre de la Materia</th>
                                    <th scope="col" class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for materium in materias %}
                                <tr>
                                    <td>{{ materium.nombre }}</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_materia_show', {'id': materium.id}) }}" 
                                               class="btn btn-info btn-sm" 
                                               title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_materia_edit', {'id': materium.id}) }}" 
                                               class="btn btn-warning btn-sm" 
                                               title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-folder-open fa-3x text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No se encontraron materias registradas</p>
                        <a href="{{ path('app_materia_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Agregar Primera Materia
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}